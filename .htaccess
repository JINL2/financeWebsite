<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # favicon.ico 직접 처리
    RewriteRule ^favicon\.ico$ - [L]
    
    # 실제 파일이나 디렉토리가 있으면 그대로 제공
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # 그 외에는 index.php로
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# 디렉토리 인덱스
DirectoryIndex index.php index.html